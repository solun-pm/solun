# Copy this file to .env and fill in the values before running docker compose.

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_SECRET=change-me-to-a-random-64-char-hex-string

# Postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/solun
PORT=3001

# Public URL of the frontend (used by the API for CORS)
FRONTEND_URL=http://localhost:3000
# EXTRA_ORIGINS=http://localhost:3000,https://soluncontent-test.solun.pm

# Public URL of the API (used by the Next.js frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Cloudflare R2 (S3-compatible)
R2_ENDPOINT=https://<account-id>.eu.r2.cloudflarestorage.com
R2_BUCKET=your-bucket-name
R2_REGION=auto
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
