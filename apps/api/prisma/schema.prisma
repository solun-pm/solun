generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id            String   @id @default(cuid())
  shortId       String   @unique
  content       String   @db.Text
  mode          String
  iv            String?
  burnAfterRead Boolean  @default(false)
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
}

model SharedFile {
  id            String   @id @default(cuid())
  shortId       String   @unique
  mode          String
  status        String
  sizeBytes     Int
  contentType   String
  originalName  String
  r2Key         String
  metadataKey   String
  uploadId      String?
  encryptedKey  String?
  downloadCount Int      @default(0)
  maxDownloads  Int?
  expiresAt     DateTime
  createdAt     DateTime @default(now())

  @@index([status, expiresAt])
}
